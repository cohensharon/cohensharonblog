<footer class='c-footer'>
  <div class='o-grid'>

    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--1-3-m o-grid__col--1-3-l {{#if @labs.subscribers}} o-grid__col--2-4-m o-grid__col--1-4-l {{/if}}'>
      <a href='{{ @site.url }}' class='u-block u-font-regular'>{{ @site.title }}</a>
    </div>

    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--1-3-m o-grid__col--1-3-l {{#if @labs.subscribers}} o-grid__col--2-4-m o-grid__col--1-4-l {{/if}}'>
      <ul class='c-footer-list o-plain-list'>
        {{ navigation }}
      </ul>
    </div>

    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--1-3-m o-grid__col--1-3-l {{#if @labs.subscribers}} o-grid__col--2-4-m o-grid__col--1-4-l {{/if}}'>
      <ul class='c-footer-list o-plain-list'>
        <li>
          <a href='https://github.com/cohensharon' target='_blank' rel='noopener'>
            <span data-icon='ei-sc-github' data-size='s'></span>
            Github
          </a>
        </li>
        <li>
          <a href='https://www.linkedin.com/in/cohensha/' target='_blank' class='block'>
            <span data-icon='ei-sc-linkedin' data-size='s'></span>
            LinkedIn
          </a>
        </li>
        <li>
          <a href='https://www.instagram.com/cohenshar/' target='_blank' rel='noopener'>
            <span data-icon='ei-sc-instagram' data-size='s'></span>
            Instagram
          </a>
        </li>
      </ul>
    </div>

    {{#if @labs.subscribers}}
      <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-4-l'>
        <p class='u-font-medium'>{{t 'Newsletter' }}</p>

        {{  subscribe_form
            form_class='c-subscribe-form'
            input_class='c-subscribe-form__input'
            placeholder=(t 'Email')
            button_class='c-subscribe-form__btn c-btn c-btn--small c-btn--full'
        }}
      </div>
    {{/if}}

    <div class='o-grid__col o-grid__col--full'>
      <div class='c-footer__copy'>
        <span class='u-font-small u-text-center u-block'>
          &copy; {{ date format='YYYY' }} {{ @site.title }} - {{{t "Published with {ghostlink}" ghostlink="<a href=\"https://ghost.org\">Ghost</a>" }}}
        </span>
      </div>
    </div>

  </div>
</footer>